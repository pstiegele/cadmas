      ul.grid
        li.small(style='background-image: url(/images/dashboard.png);')
        li.large(style='background-image: url(/images/drones.png);')
        li.large(style='background-image: url(/images/flight.png);')
        li.small(style='background-image: url(/images/drone.jpg);')
